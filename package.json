    "dev": "rm -rf ./dist && webpack --config _config/webpack.config.js",
    "dev:watch": "webpack -d --watch --display-error-details --config _config/webpack.config.js",
    "dist": "rm -rf ./dist && webpack --config _config/webpack.prod.config.js",
    "serve": "babel-node src/index.js",
    "serve:watch": "nodemon --exec babel-node src/index.js",
    "serve:dist": "npm run dist && node dist/bot.bundle.js",
    "docs": "node _scripts/verifyAreas.js && jsdoc --configure _config/jsdoc.config.json --verbose",
    "areas:create": "node _scripts/createArea.js",
    "areas:verify": "node _scripts/verifyAreas.js"
